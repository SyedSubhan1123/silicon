          <div class="absolute inset-0 rounded-xl bg-[#44C08D] opacity-0 group-hover:opacity-100 transition-all duration-300 -z-10"></div>
        </article>

        <!-- Card 3 -->
        <article class="relative cursor-pointer rounded-xl bg-white text-black p-6 shadow-md min-h-[200px] hover:scale-105 transition-all duration-300 group">
          <h3 class="text-lg font-semibold text-gray-900 group-hover:text-white">Kouri James</h3>
