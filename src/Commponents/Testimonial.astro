  <title>Testimonials Section</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900">

  <!-- Testimonials Section -->
  <section class="relative isolate w-full bg-gray-50 text-gray-900">

    <!-- Content -->
