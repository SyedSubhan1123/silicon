<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Story CTA Banner</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  <!-- Story CTA Banner Section -->
  <section class="relative w-full bg-[#2a2623] overflow-hidden" 
           style="background-image: url('https://res.cloudinary.com/dn3xpdakt/image/upload/v1756411034/cta3_jbxlzq.webp'); background-size: cover; background-position: center;">
    
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/50"></div>

    <!-- Container -->
    <div class="relative mx-auto max-w-[1280px] px-4 md:px-8 py-12">
      <div class="grid grid-cols-12 items-center gap-8">

        <!-- LEFT - Book / Devices -->
        <div class="col-span-12 md:col-span-6 flex justify-center md:justify-start relative">

          <!-- Mobile (stacked images) -->
          <div class="flex flex-col items-center gap-4 md:hidden">
            <img src="https://res.cloudinary.com/dn3xpdakt/image/upload/v1756411759/book2_e9iwat.webp" alt="Book 1" class="w-[160px] h-auto object-contain" />
            <img src="https://res.cloudinary.com/dn3xpdakt/image/upload/v1756411767/book3_cbtjqz.webp" alt="Book 2" class="w-[160px] h-auto object-contain" />
            <img src="https://res.cloudinary.com/dn3xpdakt/image/upload/v1756411776/book4_jqlrc8.webp" alt="Tablet" class="w-[200px] h-auto object-contain" />
            <img src="https://res.cloudinary.com/dn3xpdakt/image/upload/v1756411785/book5_ioxiep.webp" alt="Phone" class="w-[120px] h-auto object-contain" />
          </div>

          <!-- Desktop (overlapping absolute images) -->
          <div class="hidden md:block relative h-[280px] w-full">
            <img src="https://res.cloudinary.com/dn3xpdakt/image/upload/v1756411759/book2_e9iwat.webp" 
                 alt="Book 1" class="absolute left-0 top-0 w-[160px] h-[240px] object-contain z-10" />
            <img src="https://res.cloudinary.com/dn3xpdakt/image/upload/v1756411767/book3_cbtjqz.webp" 
                 alt="Book 2" class="absolute left-[120px] top-1 w-[160px] h-[240px] object-contain z-20" />
            <img src="https://res.cloudinary.com/dn3xpdakt/image/upload/v1756411776/book4_jqlrc8.webp" 
                 alt="Tablet" class="absolute left-[250px] top-[-10px] w-[190px] h-[260px] object-contain z-30" />
            <img src="https://res.cloudinary.com/dn3xpdakt/image/upload/v1756411785/book5_ioxiep.webp" 
                 alt="Phone" class="absolute left-[430px] top-[15px] w-[100px] h-[200px] object-contain z-40" />
          </div>

        </div>

        <!-- RIGHT - Text + CTA -->
        <div class="col-span-12 md:col-span-6 text-center md:text-left">
          <h3 class="text-white text-[22px] md:text-[24px] font-semibold leading-snug">
            Got a Story in Mind?
          </h3>
          <h2 class="mt-2 text-[40px] md:text-[48px] font-extrabold leading-tight text-yellow-400">
            LET US HELP
          </h2>
          <p class="mt-3 text-white text-[14px] md:text-[18px] max-w-[520px] font-medium mx-auto md:mx-0">
            Consult our experts, and weâ€™ll transform your thoughts into words.
          </p>

          <!-- CTA Buttons -->
          <div class="mt-6 flex flex-wrap items-center justify-center md:justify-start gap-4">
            <!-- Phone Button -->
            <a href="tel:+12082914545" class="flex items-center justify-center w-full sm:w-[50%] h-12 gap-2 no-underline bg-emerald-500 text-black px-4 py-2 rounded-full text-base cursor-pointer hover:bg-white hover:text-black transition font-bold animate-pulse">
              <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" class="text-xl" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
                <path fill="none" d="M0 0h24v24H0z" />
                <path d="M20 15.5c-1.25 0-2.45-.2-3.57-.57a1.02 1.02 0 0 0-1.02.24l-2.2 2.2a15.045 15.045 0 0 1-6.59-6.59l2.2-2.21a.96.96 0 0 0 .25-1A11.36 11.36 0 0 1 8.5 4c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1 0 9.39 7.61 17 17 17 .55 0 1-.45 1-1v-3.5c0-.55-.45-1-1-1zM19 12h2a9 9 0 0 0-9-9v2c3.87 0 7 3.13 7 7zm-4 0h2c0-2.76-2.24-5-5-5v2c1.66 0 3 1.34 3 3z"></path>
              </svg>
              <span>(208) 291 4545</span>
            </a>

            <!-- Live Chat -->
            <a href="#" onclick="event.preventDefault(); if(window.Tawk_API){window.Tawk_API.toggle();} else{console.error('Tawk API not loaded yet!');}" 
               class="hidden sm:inline-flex items-center justify-center rounded-full px-6 py-3 text-[14px] font-semibold bg-yellow-500 text-gray-900 border border-gray-200 shadow-md hover:bg-gray-100 active:translate-y-[1px]">
              Live Chat
            </a>
          </div>

        </div>

      </div>
    </div>

  </section>

</body>
</html>
